{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",  // Correct path
      "use": "@vercel/python",
       "config": {
         "maxLambdaSize": "15mb" // Good to include explicitly
       }
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "public/images/anita2rounded.png" // Make sure this path is correct too
    },
    {
      "src": "/webhook/retell",
      "dest": "app/main.py", // Correct path
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "x-retell-auth, x-retell-signature, x-vercel-protection-bypass, content-type",
        "x-vercel-protection-bypass": "${VERCEL_PROTECTION_BYPASS}"
      },
      "continue": true,
      "override": true
    },
    {
      "src": "/(.*)",
      "dest": "app/main.py" // Correct path
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}
